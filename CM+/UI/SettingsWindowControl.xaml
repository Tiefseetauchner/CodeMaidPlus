<UserControl
    x:Class="CMPlus.SettingsWindowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
    Name="MyToolWindow"
    Width="410"
    Height="90"
    d:DesignHeight="90"
    d:DesignWidth="400"
    Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
    Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
    mc:Ignorable="d">
    <Grid>
        <Border
            Width="300"
            Margin="5"
            HorizontalAlignment="Left"
            BorderBrush="Gray"
            BorderThickness="1">
            <StackPanel>
                <TextBlock Margin="5">Command Id:</TextBlock>
                <TextBox Margin="5,0" IsReadOnly="True">
                    <TextBox.ToolTip>
                        <TextBlock>
                            Insert command Id value in the<LineBreak />
                            &quot;CodeMaid &gt; Options &gt; Reorganizing &gt; ThirdParty &gt; Other Cleaning Commands&quot;<LineBreak />
                            to enable CodeMaid integration manually.</TextBlock>
                    </TextBox.ToolTip>
                    Tools.CM+Format
                </TextBox>
                <StackPanel Margin="5" Orientation="Horizontal">
                    <TextBlock Margin="0,5,5,5">Status:</TextBlock>
                    <TextBlock
                        x:Name="status"
                        Margin="0,5"
                        FontStyle="Italic">
                        Unintegrated
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
        <StackPanel
            Width="90"
            HorizontalAlignment="Right"
            Orientation="Vertical">
            <!--<TextBlock Margin="10" HorizontalAlignment="Center">CM+ Settings</TextBlock>-->
            <Button
                x:Name="integrate"
                Height="24"
                Margin="5"
                Click="integrate_Click"
                Content="Integrate"
                ToolTip="Click to enable/disable CodeMaid integration" />
            <Button
                x:Name="help"
                Height="24"
                Margin="5"
                Click="help_Click"
                Content="Help"
                ToolTip="Visit CodeMaid+ website" />
        </StackPanel>
    </Grid>
</UserControl>